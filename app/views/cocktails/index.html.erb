<div class="navbar">
    <%= render 'layouts/navbar', class: "navbar" %>
</div>
<div class="main-container container index-main-container d-flex justify-content-between">
    <div class="row col-md-12 col-lg-12 mx-auto">
        <% @cocktails.each do |cocktail| %>

            <div class="card cocktail-card col-md-3 col-bg-2 text-wrap text-center  card bg-dark text-white m-3">
                <%= cl_image_tag "#{cocktail.photo.key}", class:"card-img w-100", height: 300, width: 300, crop: :fill%>
                <div class="cocktail-title card-img-overlay">
                    <h4><%= link_to cocktail.name.split.map(&:capitalize).join(' '), cocktail_path(cocktail) %></h4>
                </div>
            </div>
        <% end %>
    </div>
</div>

