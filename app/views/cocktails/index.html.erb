<div class="navbar">
    <%= render 'layouts/navbar', class: "navbar" %>
</div>
<div class="main-container container index-main-container d-flex flex-column justify-content-between my-4">
    <div class="index-header">
        <div class="row my-5">
            <div class="col-12 mx-auto text-center">
                <h3>What'll you have?</h3>
            </div>
        </div>
    </div>
    <div class="row mx-auto">

        <% @cocktails.each do |cocktail| %>
            <% if cocktail.photo.attached? %>
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
                        <%= link_to content_tag(:span, cocktail.name.split.map(&:capitalize).join(' ')), cocktail_path(cocktail)%>
                    </div>
                </div>
            <% else %>
                 <div class="col-md-6 col-lg-4 mb-3">
                    <div class="cocktail-card" style="background-color: grey)%>
                    </div>
            <% end %>

        <% end %>
    </div>
</div>

